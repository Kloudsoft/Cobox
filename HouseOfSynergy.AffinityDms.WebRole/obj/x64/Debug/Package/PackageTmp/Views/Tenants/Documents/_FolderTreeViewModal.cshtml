@model List<FolderTreeViewModel>
@(Html.Kendo().TreeView()
    .Name("FolderTreeViewModal")
    .LoadOnDemand(false)
    .Events(e => e.Select("OnSelectedFolderTreeViewModal")
                .DataBound("onDataBoundFolderTreeViewModal"))
    .TemplateId("treeview-template-FolderTreeViewModal")
    .ExpandAll(true)
    .DataTextField("Name")
    .DataSource(dataSource => dataSource
        .Model(model => model
            .Id("Id")
            .HasChildren("HasChildren")
            )
    .Read(read => read
            .Action("Folder_Read", "TenantDocumentsFolderWise")
    )
    )
)
<script id="treeview-template-FolderTreeViewModal" type="text/kendo-ui-template">
    <label id="templabelid" data-tempid='#: item.Id #'>#: item.Name #</label>
    <input type="hidden" value='#: item.Id #'>
</script>