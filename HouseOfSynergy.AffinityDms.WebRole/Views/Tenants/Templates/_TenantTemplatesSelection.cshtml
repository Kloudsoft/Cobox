@model IEnumerable<HouseOfSynergy.AffinityDms.Entities.Tenants.Template>

@(Html.Kendo().Grid(Model).Name("TenantTemplatesSelectionListGrid").Columns
    (
        columns =>
        {
            columns.Bound(item => item.Id).Hidden().HtmlAttributes(new { @name = "TemplateNo" });
            columns.Template(item => item.Title).Title("Name");
            columns.Template(item => item.Description).Title("Description");
            columns.Template(item => item.VersionMajor+"."+item.VersionMinor).Title("Version");
            columns.Template(item => ((item.IsSelected) ? ("<input type='checkbox' class='check-box' data-id='" + item.Id + "'  checked='checked' value='" + item.IsSelected + "' name='CheckTemplateSelection'  data-name="+item.Title+"><input name='CheckTemplateSelection_H' type='hidden' value='false' />") : ("<input type='checkbox' class='check-box' data-id='" + item.Id + "' value='" + item.IsSelected + "' name='CheckTemplateSelection' data-name=" + item.Title + "><input name='CheckTemplateSelection_H' type='hidden' value='false' />"))).Title("Add/Remove");
        }
    )
    .Resizable(resize => resize.Columns(true))
    .Filterable()
    .Sortable()
     .HtmlAttributes(new { @style = "max-height:500px;overflow-y:scroll" })
)




