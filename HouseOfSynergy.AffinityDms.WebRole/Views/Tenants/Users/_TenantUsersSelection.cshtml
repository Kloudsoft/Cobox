@model IEnumerable<HouseOfSynergy.AffinityDms.Entities.Tenants.User>
@(

                 Html.Kendo().Grid(Model).Name("TenantUsersSelectionListGrid").Columns
                        (
                        columns =>
                        {

                            columns.Bound(item => item.Id).Hidden().HtmlAttributes(new { @name = "UserNo" });
                            columns.Template(item => item.NameFull).Title("Name");//(item.NameGiven + " " + item.NameFamily)
                            columns.Bound(item => (item.Department.Name)).Title("Department Name");
                            columns.Template(item => ((item.IsUserSelected) ? ("<input type='checkbox' class='check-box' data-id='" + item.Id + "' data-name='" + item.NameFull + "' checked='checked' value='" + item.IsUserSelected + "' name='CheckUserSelection' ><input name='CheckUserSelection_H' type='hidden' value='false' />") : ("<input type='checkbox' class='check-box' data-id='" + item.Id + "' data-name='" + item.NameFull + "' value='" + item.IsUserSelected + "' name='CheckUserSelection'><input name='CheckUserSelection_H' type='hidden' value='false' />"))).Title("Add/Remove");
                        }
                        )
                        .Resizable(resize => resize.Columns(true))
                        .Filterable()
                        .Sortable()
                        .Scrollable()
)







