@model List<HouseOfSynergy.AffinityDms.Entities.Tenants.DiscoursePostVersionAttachment>

@(Html.Kendo().Grid(Model)
                .Name("DiscourseAttachmentsGrid")
                .Selectable(select => select.Mode(GridSelectionMode.Multiple))
                .Columns(columns =>
                {
                    columns.Bound(item => item.Id).Hidden().HtmlAttributes(new { @name = "AttachmentNo" });
                    columns.Template(
                       item => HouseOfSynergy.AffinityDms.WebRole.Classes.CustomHelpers.CustomHtmlHelpers.GetAttachmentsString(item, 26)
                   ).Title("Attachment").HeaderHtmlAttributes(new { style = "padding: 8px 20px 20px 8px;line-height: 1.42857143;text-align: left;font-weight: bold;font-family: 'Lato', sans-serif!important;color:#707070!important;background-color: white;" });
                    columns.Bound(item => item.AttachmentType).Title("Type").HeaderHtmlAttributes(new { style = "padding: 8px 20px 20px 8px;line-height: 1.42857143;text-align: left;font-weight: bold;font-family: 'Lato', sans-serif!important;color:#707070!important;background-color: white;" });
                    columns.Template(item => item.PostVersion.DateTime).Title("Date/Time").HeaderHtmlAttributes(new { style = "padding: 8px 20px 20px 8px;line-height: 1.42857143;text-align: left;font-weight: bold;font-family: 'Lato', sans-serif!important;color:#707070!important;background-color: white;" });

                })
        .Pageable()
        .Sortable()
        .Scrollable(x=>x.Height("300px"))
        .DataSource(dataSource => dataSource
        .Server()
        .Model(model => model.Id(x => x.Id)))
)