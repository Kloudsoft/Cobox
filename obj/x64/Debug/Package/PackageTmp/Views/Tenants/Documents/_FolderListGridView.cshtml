@model IEnumerable<HouseOfSynergy.AffinityDms.Entities.Tenants.Folder>
@(Html.Kendo().Grid(Model) //Bind the grid to ViewBag.Products
      .Name("FolderListGrid")
      .Columns(columns =>
      {
          columns.Bound(item => item.Id).Hidden().HtmlAttributes(new { @name = "FolderNo" });
          columns.Template(item => "<a onclick='javascript: ExpandSelectedNode(this)' data-id='" + item.Id + "' style='cursor: pointer;'>" + item.Name+"</a>").Title("Folder Name");
          columns.Bound(item => item.UserCreatedBy.NameFull).Title("Created By");
          columns.Bound(item => item.DateTimeCreated).Title("DateTime Created");
          columns.Bound(item => item.DateTimeModified).Title("Datetime Modified");
          columns.Template(item => ("<a href='#' data-toggle='modal' data-target='#RightsModal' data-id='" + item.Id + "' data-type='Folder'><img src='/Images/user_lock.png' title='Move Folder' style='height:25px;width:25px' id='" + item.Id + "'  ></a>")).Title("Actions");
          //columns.Bound(item => item.DocumentCount).Title("Document Count);
          //createdby, creadted when, modified when , document count
      })
        .ClientRowTemplate(
               "<tr data-uid='#: uid #'>" +
                "<td name='FolderNo' style='display:none'>" +
                "#: Id #" +
                "</td>" +
                "<td>" +
                "<a onclick='javascript: ExpandSelectedNode(this)' data-id='#: Id #' style='cursor: pointer;'>#: Name #</a>" +
                "</td>" +
                "<td>" +
                "#: UserCreatedBy.NameFull #" +
                "</td>" +
                "<td>" +
                "#: DateTimeCreated #" +
                "</td>" +
                "<td>" +
                     "#: DateTimeModified #" +
                "</td>" +
                "<td>" +
                    "<a href ='\\#' data-toggle='modal' data-target='\\#RightsModal' data-id='#:Id#' data-type='Folder'><img src='/Images/user_lock.png' title='User Rights Management' style='height:25px;width:25px' id='#:Id#'></a>" +
                "</td>" +
                //"<td>" +
                //     "#: DocumentCount #" +
                //"</td>" +
                "</tr>"
           )
        .ClientAltRowTemplate(
                "<tr data-uid='#: uid #' class='k-alt' >" +
                "<td name='FolderNo' style='display:none'>" +
                "#: Id #" +
                "</td>" +
                "<td>" +
                "<a onclick='javascript: ExpandSelectedNode(this)' data-id='#: Id #' style='cursor: pointer;'>#: Name #</a>" +
                "</td>" +
                "<td>" +
                "#: UserCreatedBy.NameFull #" +
                "</td>" +
                "<td>" +
                "#: DateTimeCreated #" +
                "</td>" +
                "<td>" +
                     "#: DateTimeModified #" +
                "</td>" +
                 "<td>" +
                    "<a href ='\\#' data-toggle='modal' data-target='\\#RightsModal' data-id='#:Id#' data-type='Folder'><img src='/Images/user_lock.png' title='User Rights Management' style='height:25px;width:25px' id='#:Id#'></a>" +
                "</td>" +
                // "<td>" +
                //     "#: DocumentCount #" +
                //"</td>" +
                "</tr>"
           )
      //.Pageable()
      .Scrollable(a => a.Height("auto"))
      .Filterable()
      .HtmlAttributes(new { @style = "max-height:250px", })

)
